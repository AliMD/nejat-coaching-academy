---
layout: base-body
---

<figure class="relative bg-surfaceContainer elevation-1 rounded-b-3xl">
  <div class="block {{ post.data.banner.aspect }} rounded-b-3xl bg-no-repeat bg-center bg-cover"
    style="background-image: url('{{ post.data.banner.image }}');">
    <img class="sr-only" src="{{ post.data.banner.image }}" alt="{{ post.data.banner.alt }}" />
  </div>

  <div class="flex items-center ps-24 pe-2 py-1">
    <p class="text-titleMedium">{{ post.data.author.name }}</p>
    <div class="grow"></div>
    <button class="icon-btn state-error">{% alwatrIcon "favorite" %}</button>
    <button class="icon-btn state-tertiary">{% alwatrIcon "chat_bubble" %}</button>
    <button class="icon-btn">{% alwatrIcon "share" %}</button>
  </div>

  <img
    class="absolute bottom-4 right-6 block size-16 rounded-full ring-2 ring-primary ring-offset-background ring-offset-2"
    src="{{ post.data.author.avatar }}" alt="{{ post.data.author.name }}" />
</figure>

<main class="bg-surface text-onSurface text-bodyMedium px-6 pt-8 pb-8 rounded-t-[2rem] grow flex flex-col gap-3">
  {{ content | safe }}
</main>

