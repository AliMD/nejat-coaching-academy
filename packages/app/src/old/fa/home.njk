      {% alwatrIcon "visibility", "text-[1.5rem]" %}
    </a>
  </section> #}

  <!-- contact-us -->
  <section class="mt-10 px-4 text-bodyMedium">
    <h2 class="text-titleLarge text-primary">
      {% alwatrIcon "headset_mic", "inline-block text-[1.75em]" %}
      <span class="ms-1">ارتباط با ما</span>
    </h2>

    <figure
      class="mt-6 aspect-video rounded-3xl bg-surfaceVariant bg-cover bg-top bg-no-repeat"
      style="background-image: url('/img/cover/contact.jpeg')"
    ></figure>

    <div class="mt-4 flex flex-row flex-wrap justify-center gap-4">
      <a href="{{ contact.phone.url }}" class="rounded-3xl text-center">
        <div class="rounded-full bg-surfaceVariant p-8 text-[2.5rem] state-onSurfaceVariant">
          {% alwatrIcon "call:fill", "inline-block" %}
        </div>
        <div class="text-ellipsis py-2 text-labelLarge text-onSurfaceVariant">تماس</div>
      </a>
      <a href="{{ contact.email.url }}" class="rounded-3xl text-center">
        <div class="rounded-full bg-surfaceVariant p-8 text-[2.5rem] state-onSurfaceVariant">
          {% alwatrIcon "mail:fill", "inline-block" %}
        </div>
        <div class="text-ellipsis py-2 text-labelLarge text-onSurfaceVariant">ایمیل</div>
      </a>
      <a href="{{ contact.aparat }}" class="rounded-3xl text-center">
        <div class="rounded-full bg-surfaceVariant p-8 text-[2.5rem] state-onSurfaceVariant">
          {% alwatrIcon "smart_display:fill", "inline-block" %}
        </div>
        <div class="text-ellipsis py-2 text-labelLarge text-onSurfaceVariant">آپارات</div>
      </a>
      <a href="{{ contact.instagram }}" class="rounded-3xl text-center">
        <div class="rounded-full bg-surfaceVariant p-8 text-[2.5rem] state-onSurfaceVariant">
          {% alwatrIcon "photo_camera:fill", "inline-block" %}
        </div>
        <div class="text-ellipsis py-2 text-labelLarge text-onSurfaceVariant">اینستاگرام</div>
      </a>
      <a href="{{ contact.telegram }}" class="rounded-3xl text-center">
        <div class="rounded-full bg-surfaceVariant p-8 text-[2.5rem] state-onSurfaceVariant">
          {% alwatrIcon "send:fill", "inline-block" %}
        </div>
        <div class="text-ellipsis py-2 text-labelLarge text-onSurfaceVariant">تلگرام</div>
      </a>
      <a href="/fa/chat.html" class="rounded-3xl text-center">
        <div class="rounded-full bg-tertiaryContainer p-8 text-[2.5rem] state-onTertiaryContainer">
          {% alwatrIcon "chat:fill", "inline-block" %}
        </div>
        <div class="text-ellipsis py-2 text-labelLarge text-onSurfaceVariant">گفتگوی آنلاین</div>
      </a>
    </div>
  </section>
</main>
