    <h2 class="text-titleLarge text-primary">
      {% alwatrIcon "perm-data-setting", "inline-block text-[1.75em]" %}
      <span class="ms-1">خدمات ما</span>
    </h2>
    <div class="mt-6 flex flex-row flex-wrap content-start gap-4">
      {% for id in commonServices %}
